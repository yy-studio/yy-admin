<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yystudio.admin.module.system.role.dao.RoleDao">

    <resultMap id="RoleEntity"
               type="com.yystudio.admin.module.system.role.domain.entity.RoleEntity"></resultMap>


    <select id="getByRoleName" resultMap="RoleEntity">
        SELECT *
        FROM t_role
        WHERE role_name = #{roleName}
    </select>


    <select id="getByRoleCode" resultMap="RoleEntity">
        SELECT *
        FROM t_role
        WHERE role_code = #{roleCode}
    </select>
</mapper>